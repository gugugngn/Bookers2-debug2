<% if book.favorited_by?(current_user) %>
  <%=link_to book_favorites_path(book), method: :delete, remote: true do %>
   <i class="fa-solid fa-hands faa-bounce animated-hover" style="font-size: 24px; color: #FFCC33;"></i>
   <%= book.favorites.count %>拍手
  <% end %>
<% else %>
  <%=link_to book_favorites_path(book), method: :post, remote: true do %>
   <i class="fa-solid fa-hands faa-bounce animated-hover" style="font-size: 24px;"></i>
   <%= book.favorites.count %>拍手
  <% end %>
<% end %>
